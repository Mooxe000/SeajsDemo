extends ../base/base

block append base_head
  link(href=path.root + "pages/todo/stylesheets/" + 'todo.css', type="text/css", rel="stylesheet")
  title Todo Page

block append base_foot
  script(src=path.root + 'pages/todo/javascripts/' + 'init.js')

block content

  section#todoapp
    header#header
      h1 todos
      input#new-todo(placeholder="What needs to be done?", autofocus)
    section#main
      input#toggle-all(type="checkbox")
      label(for="toggle-all") Mark all as complete
      ul#todo-list
    footer#footer

  footer#info
    p Double-click to edit a todo
    p
      |Originated by
      a(herf="https://github.com/addyosmani")  Addy Osmani
    p Part of
      a(herf="http://todomvc.com")  TodoMVC
    p Modified by
      a(herf="http://www.linkgod.net")  LinGod
      |  in March 2013
